@model IEnumerable<E7PNN.Models.Team>
@{
    ViewBag.Title = "teams";
}

<div class="content-wrapper">
    <div class="content-wrapper-before"></div>
    <div class="content-header row">
        <div class="content-header-left col-md-4 col-12 mb-2">
            <h3 class="content-header-title">小隊列表</h3>
        </div>
        <div class="content-header-right col-md-8 col-12">
            <div class="breadcrumbs-top float-md-right">
                <div class="breadcrumb-wrapper mr-1">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href='@Url.Action("Index", "Home")'>洞察報告</a>
                        </li>
                        <li class="breadcrumb-item active">
                            小隊列表
                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- 小隊資料 start -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">小隊資料</h4>
                    <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                    <div class="heading-elements">
                        <ul class="list-inline mb-0">
                            <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                            <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                            <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                            <li><a data-action="close"><i class="ft-x"></i></a></li>
                        </ul>
                    </div>
                </div>
                <div class="card-content collapse show">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead class="thead">
                                <tr>
                                    <th scope="col">選取</th>
                                    <th scope="col">小隊編號</th>
                                    <th scope="col">小隊名稱</th>
                                    <th scope="col">隊長姓名</th>
                                    @*<th scope="col">小隊人數</th>*@
                                    <th scope="col">創建日期</th>
                                    <th scope="col">詳細資訊</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td><input type="checkbox" id="myCheck"></td>
                                        <td>@Html.DisplayFor(modelItem => item.ID)</td>
                                        <td>@Html.DisplayFor(modelItem => item.TeamName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Member.Name)</td>
                                        @*<td>@Html.DisplayFor(modelItem => item.)</td>*@
                                        <td>@Html.DisplayFor(modelItem => item.CreateTime)</td>
                                        <td><button type="button" class="btn btn-link" data-toggle="modal" data-target="#Details"><i class="la la-file-text"></i></button></td>
                                    </tr>
                                }
                                </tbody>
                        </table>
                    </div>
                    <div class="btn-group" role="group" aria-label="btn col-1" style="bottom:10px;">
                        <button type="button" class="btn btn-link"><span style="color:#0D2340;"><i class="la la-angle-double-left"></i></span></button>
                        <button type="button" class="btn btn-link"><span style="color:#0D2340;">1</span></button>
                        <button type="button" class="btn btn-link"><span style="color:#0D2340;">2</span></button>
                        <button type="button" class="btn btn-link"><span style="color:#0D2340;">3</span></button>
                        <button type="button" class="btn btn-link"><span style="color:#0D2340;">4</span></button>
                        <button type="button" class="btn btn-link"><span style="color:#0D2340;">5</span></button>
                        <button type="button" class="btn btn-link"><span style="color:#0D2340;"><i class="la la-angle-double-right"></i></span></button>
                    </div>
                    <div class="btn-group" role="group" aria-label="btn col-1" style="position:absolute ;right:20px;bottom:10px;">
                        <button type="button" class="btn btn-link"><span style="color:#0D2340;"><i class="la la-edit">編輯</i></span></button>
                        <button type="button" class="btn btn-link"><span style="color: #0D2340;"><i class="la la-envelope">寄信</i></span></button>
                    </div>
                    <div class="modal fade" id="Details" tabindex="-1" role="dialog" aria-labelledby="DetailsLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h4>小隊名稱</h4>
                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                                        &times;
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <table class="table table-striped">
                                        <thead class="thead">
                                            <tr>
                                                <th scope="col">職位</th>
                                                <th scope="col">成員<br />名稱</th>
                                                <th scope="col">聯絡<br />電話</th>
                                                <th scope="col">email</th>
                                            </tr>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>隊長</td>
                                                    <td>@Html.DisplayFor(modelItem => item.Member.Name)</td>
                                                    <td>@Html.DisplayFor(modelItem => item.Member.Phone)</td>
                                                    <td>@Html.DisplayFor(modelItem => item.Member.Email)</td>
                                                </tr>
                                                <tr>
                                                    <td>隊員</td>
                                                    <td>@Html.DisplayFor(modelItem => item.Member1.Name)</td>
                                                    <td>@Html.DisplayFor(modelItem => item.Member1.Phone)</td>
                                                    <td>@Html.DisplayFor(modelItem => item.Member1.Email)</td>
                                                </tr>
                                                <tr>
                                                    <td>隊員</td>
                                                    <td>@Html.DisplayFor(modelItem => item.Member2.Name)</td>
                                                    <td>@Html.DisplayFor(modelItem => item.Member2.Phone)</td>
                                                    <td>@Html.DisplayFor(modelItem => item.Member2.Email)</td>
                                                </tr>
                                                <tr>
                                                    <td>隊員</td>
                                                    <td>@Html.DisplayFor(modelItem => item.Member3.Name)</td>
                                                    <td>@Html.DisplayFor(modelItem => item.Member3.Phone)</td>
                                                    <td>@Html.DisplayFor(modelItem => item.Member3.Email)</td>
                                                </tr>
                                                <tr>
                                                    <td>隊員</td>
                                                    <td>@Html.DisplayFor(modelItem => item.Member4.Name)</td>
                                                    <td>@Html.DisplayFor(modelItem => item.Member4.Phone)</td>
                                                    <td>@Html.DisplayFor(modelItem => item.Member4.Email)</td>
                                                </tr>
                                            }
                                        </thead>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- 小隊資料 end -->
</div>