@model E7PNN.Models.ViewModel.ForgetVm


<div class="bg bg-blur"></div>
<div class="row">
    <div class="frame">

        <div id="image_logo">
            <a href="index.html"> <img src="~/images/logo.svg"></a>
        </div>


        <!-- 忘記密碼表單 使用信箱 -->
        <form id="form_forget" action="~/Lonig/Forget" method="post">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { })
            <div class="field">
                @Html.TextBoxFor(m => m.Email, new { @Name = "email", @placeholder = "e7pn@example.com", @type = "email" })
                <label for="email">信箱</label>
            </div>
            <button class="btn_repassword" type="submit" value="signup">
                傳送密碼重設連結
            </button>

        </form>

        <!-- 返回登入頁面 -->
        <button class="btn_login" type="button" value="to_login" onclick="window.location='login.html'">返回登入頁面</button>


    </div>
</div>
@section scripts{
    <link href="@Url.Content("~/Content/css/forget.css")" rel="stylesheet" type="text/css" />
}


