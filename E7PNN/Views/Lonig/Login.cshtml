<div id="banner" class=" d-flex align-items-center justify-content-center row text-center">

    <div style="width: 100%;height: 1000px; top: -100px;background-image: url('../../images/turtle01.jpg');background-size: cover;">

    </div>

</div>

<div class="row">
    <div class="frame">

        <div id="image_logo">
            <a href="~/Home/Index"> <img src="~/images/logo.svg"></a>
        </div>
        <!-- 第三方登入區塊 -->
        <div id="login_otherDivice">
            <button type="button" class="btn_login_facebook">
                <i class="fab fa-facebook-f"></i>
                使用 Facebook註冊 / 登入

            </button>
            <button type="button" class="btn_login_google">
                <i class="fab fa-google"></i>
                使用 Google註冊 / 登入
            </button>
        </div>
        <!-- 字+中間的過度的橫線 -->
        <div class="title_gap">或</div>


        <!-- 登入表單 使用信箱密碼 -->
        <form id="form_login" action="~/Lonig/Login" method="post">
            <div class="field">
                <input required type="email" name="email" id="email" placeholder="e7pn@example.com" autocomplete="on"
                       value="">
                <label for="email">信箱</label>
            </div>

            <div class="field">
                <input required type="password" name="password" id="password" placeholder="password" autocomplete="on"
                       value="">
                <label for="password">密碼</label>
            </div>
            <button class="btn_login" type="submit" value="login">
                登入

            </button>

        </form>

        <!-- 忘記密碼或註冊 -->
        <button onclick="location.href='http://www.example.com'" class="btn_forget" type="button" value="to_forget" onclick="window.location='forget.html'">忘記密碼？</button>
        <button onclick="location.href='Signup'" class="btn_signup" type="button" value="to_signup" onclick="window.location='signup.html'">註冊</button>




        <!-- 個資協議 -->
        <p class="agree">
            註冊/登入即代表您同意遵守 <a href="terms.html">E7PN 使用協議</a>
        </p>

        <a  href='~/Admin/LoginB/Signin'>後台</a>
    </div>
</div>


